<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="spirographs.spirographs.Controller">
    <Canvas fx:id="canvas" height="800.0" width="800.0" />
    <Circle fx:id="dot" fill="TRANSPARENT" radius="4" stroke="WHITE" strokeType="INSIDE" />
   <ToolBar layoutX="257.0" layoutY="715.0" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
      <items>
          <Button mnemonicParsing="false" onAction="#clear" text="Clear" />
          <TextField fx:id="colour" prefHeight="26.0" prefWidth="67.0" promptText="colour" text="FFFFFF" />
          <TextField fx:id="outerRadius" prefHeight="26.0" prefWidth="64.0" promptText="outer radius" text="130" />
          <TextField fx:id="innerRadius" prefHeight="26.0" prefWidth="64.0" promptText="inner radius" text="70" />
          <TextField fx:id="point" prefHeight="26.0" prefWidth="64.0" promptText="edge dist." text="50" />
          <Button mnemonicParsing="false" onAction="#draw" text="Draw" />
          <Button mnemonicParsing="false" onAction="#animate" text="Animate" />
      </items>
   </ToolBar>
</AnchorPane>
